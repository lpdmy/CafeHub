@model CafeHub.MVC.Models.OrderViewModel

<div class="page-book-table">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="book-table-content">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Create Order</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">Add a New Order</h2>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Fill in the details below to create a new order.</p>
                    </div>

                    <div class="contact-us-form wow fadeInUp" data-wow-delay="0.6s">
                        <form asp-controller="Orders" asp-action="Create" method="post">
                            <div class="row">
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="CustomerName" class="form-control" readonly>
                                </div>
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="PhoneNumber" class="form-control" readonly>
                                </div>
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="Address" class="form-control" readonly>
                                </div>

                                @for (int i = 0; i < Model.OrderItems.Count; i++)
                                {
                                    <div class="form-group col-md-12 mb-4">
                                        <label>Product: @Model.OrderItems[i].ProductName</label>
                                        <input asp-for="OrderItems[@i].Quantity" type="number" class="form-control" placeholder="Quantity">
                                        <select asp-for="OrderItems[@i].Size" class="form-control mt-2">
                                            <option>Small</option>
                                            <option selected>Medium</option>
                                            <option>Large</option>
                                        </select>
                                        <input asp-for="OrderItems[@i].SugarAmount" type="number" class="form-control mt-2" placeholder="Sugar %">
                                        <input asp-for="OrderItems[@i].IceAmount" type="number" class="form-control mt-2" placeholder="Ice %">
                                    </div>
                                }

                                <!-- Total Amount -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="TotalAmount" type="number" step="0.01" class="form-control" placeholder="Total Amount">
                                    <span class="help-block with-errors" asp-validation-for="TotalAmount"></span>
                                </div>

                               


                                <div class="col-lg-12">
                                    <div class="book-table-btn">
                                        <button type="submit" class="btn-default">Create Order</button>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <p class="mt-3">
                            Want to check order history?
                            <div class="book-table-btn">
                                <a asp-controller="Orders" asp-action="History" asp-route-customerId="YOUR_CUSTOMER_ID" class="btn-default ml-2">View History</a>
                            </div>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
