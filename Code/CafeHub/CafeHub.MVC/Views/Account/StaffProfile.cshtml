@model StaffProfileViewModel

<div class="page-header parallaxie">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="page-header-box">
                    <h1 class="text-anime-style-3" data-cursor="-opaque">Staff Profile</h1>
                    <nav class="wow fadeInUp">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Profile</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-contact-us">
    <div class="container">
        <div class="row align-items-center">
           
                <div class="contact-content">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Profile</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">Staff Information</h2>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">View your account and work details.</p>
                    </div>

                    <div class="contact-us-form">
                        <div class="row">
                            <div class="form-group col-md-12 mb-4">
                                <label>Full Name</label>
                                <input value="@Model.Name" class="form-control" readonly>
                            </div>

                            <div class="form-group col-md-12 mb-4">
                                <label>Email</label>
                                <input value="@Model.Email" class="form-control" readonly>
                            </div>

                            <div class="form-group col-md-12 mb-4">
                                <label>Employee Code</label>
                                <input value="@Model.EmployeeCode" class="form-control" readonly>
                            </div>

                            <div class="form-group col-md-12 mb-4">
                                <label>Position</label>
                                <input value="@Model.Position" class="form-control" readonly>
                            </div>

                            <div class="form-group col-md-12 mb-4">
                                <label>Hire Date</label>
                                <input value="@Model.HireDate.ToString("yyyy-MM-dd")" class="form-control" readonly>
                            </div>

                            <div class="form-group col-md-12 mb-4">
                                <label>Base Salary</label>
                            <input value="@($"{Model.Salary:#,##0} VND")" class="form-control" readonly> 
                            </div>

                            <div class="form-group col-md-12 mb-4">
                                <label>Net Salary</label>
                            <input value="@($"{Model.TotalSalary:#,##0} VND")" class="form-control" readonly>
                            </div>

                            <div class="form-group col-md-12 mb-4">
                                <label>Account Created At</label>
                                <input value="@Model.CreatedAt.ToString("yyyy-MM-dd")" class="form-control" readonly>
                            </div>                            

                            <div class="form-group col-md-12 mb-4">
                                <label>Account Status</label>
                                <input value="@(Model.IsLocked ? "Locked" : "Active")" class="form-control text-danger" readonly>
                            </div>

                            <div class="col-lg-12">
                                <div class="contact-btn">
                                    <a asp-controller="Account" asp-action="ChangePassword" class="btn-default">Change Password</a>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
