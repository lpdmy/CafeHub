@model CafeHub.Commons.Models.User

<form asp-action="Register" method="post">
    <div>
        <label>Email:</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password" />
    </div>
    <div>
        <label>Name:</label>  <!-- Add a field for the name -->
        <input asp-for="Name" />
    </div>
    <button type="submit">Register</button>
</form>
