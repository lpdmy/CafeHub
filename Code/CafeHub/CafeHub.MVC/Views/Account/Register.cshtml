@model CafeHub.MVC.Models.RegisterViewModel

<div class="page-header parallaxie">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="page-header-box">
                    <h1 class="text-anime-style-3" data-cursor="-opaque">Register</h1>
                    <nav class="wow fadeInUp">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Register</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-contact-us">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="contact-image">
                    <figure class="image-anime">
                        <img src="~/images/register-image.jpg.jpg" alt="Register Image">
                    </figure>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="contact-content">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Register</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">Create an Account</h2>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Fill in the details below to create a new account.</p>
                    </div>

                    <div class="contact-us-form">
                        <form id="registerform" asp-action="Register" asp-controller="Account" method="post" class="wow fadeInUp" data-wow-delay="0.4s">
                            <div class="row">
                                <!-- Name -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="FullName" class="form-control" placeholder="Full Name">
                                    <span class="help-block with-errors" asp-validation-for="FullName"></span>
                                </div>

                                <!-- Email -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="Email" class="form-control" placeholder="Email Address">
                                    <span class="help-block with-errors" asp-validation-for="Email"></span>
                                </div>

                                <!-- Phone -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="Phone" class="form-control" placeholder="Phone Number">
                                    <span class="help-block with-errors" asp-validation-for="Phone"></span>
                                </div>

                                <!-- Date of Birth -->
                                <div class="form-group col-md-6 mb-4">
                                    <input asp-for="DateOfBirth" type="date" class="form-control">
                                    <span class="help-block with-errors" asp-validation-for="DateOfBirth"></span>
                                </div>

                                <!-- Gender -->
                                <div class="form-group col-md-6 mb-4">
                                    <select asp-for="Gender" class="form-control">
                                        <option value="">Select Gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span class="help-block with-errors" asp-validation-for="Gender"></span>
                                </div>

                                <!-- Address -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="Address" class="form-control" placeholder="Address">
                                    <span class="help-block with-errors" asp-validation-for="Address"></span>
                                </div>

                                <!-- Password -->
                                <div class="form-group col-md-6 mb-4">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                                    <small>
                                        Password must contain at least one uppercase letter, one lowercase letter, one number, and one special character.
                                    </small>
                                    <span class="help-block with-errors" asp-validation-for="Password"></span>
                                </div>

                                 <!-- Confirm Password -->
                                <div class="form-group col-md-6 mb-4">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                                    <span class="help-block with-errors" asp-validation-for="ConfirmPassword"></span>
                                </div>

                                <div class="col-lg-12">
                                    <div class="contact-btn">
                                        <button type="submit" class="btn-default">Register</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <p class="mt-3">
                            Already have an account?
                            <div class="contact-btn">
                                <a asp-controller="Account" asp-action="Login" class="btn-default ml-2">Login Here</a>
                            </div>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>