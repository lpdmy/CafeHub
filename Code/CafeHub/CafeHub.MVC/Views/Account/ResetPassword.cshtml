@model ResetPasswordViewModel

<div class="page-header parallaxie">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="page-header-box">
                    <h1 class="text-anime-style-3" data-cursor="-opaque">Reset Password</h1>
                    <nav class="wow fadeInUp">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Reset Password</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-contact-us">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="contact-image">
                    <figure class="image-anime">
                        <img src="~/images/reset-password.jpg" alt="Reset Password Image">
                    </figure>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="contact-content">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Reset Password</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">Enter New Password</h2>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Set a new password for your account.</p>
                    </div>

                    <div class="contact-us-form">
                        <form asp-action="ResetPassword" asp-controller="Account" method="post" class="wow fadeInUp" data-wow-delay="0.4s">
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="Token" />

                            <div class="row">
                                <!-- New Password -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password">
                                    <small>Password must contain at least one uppercase, one lowercase, one number, and one special character.</small>
                                    <span class="help-block with-errors" asp-validation-for="NewPassword"></span>
                                </div>

                                <!-- Confirm Password -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                                    <span class="help-block with-errors" asp-validation-for="ConfirmPassword"></span>
                                </div>

                                <div class="col-lg-12">
                                    <div class="contact-btn">
                                        <button type="submit" class="btn-default">Reset Password</button>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <p class="mt-3">
                            Remember your password?
                            <div class="contact-btn">
                                <a asp-controller="Account" asp-action="Login" class="btn-default ml-2">Login Here</a>
                            </div>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
