@model LoginViewModel

<div class="page-contact-us">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="contact-information">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Login</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">Access your account</h2>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Enter your credentials to log in and access your dashboard.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="contact-us-form">
                    <div class="contact-form-content">
                        <h3 class="wow fadeInUp">Sign In</h3>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Please enter your email and password.</p>
                    </div>

                    <div class="contact-form">
                        <form asp-action="Login" asp-controller="Account" method="post" class="wow fadeInUp" data-wow-delay="0.4s">
                            <div class="row">
                                <div class="form-group col-md-12 mb-5">
                                    <input asp-for="Email" class="form-control" id="email" placeholder="E-mail Address" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group col-md-12 mb-5">
                                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password" required>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="col-lg-12">
                                    <div class="contact-form-btn">
                                        <button type="submit" class="btn-default">Login</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>