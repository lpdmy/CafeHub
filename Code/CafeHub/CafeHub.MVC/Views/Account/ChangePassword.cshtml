@model ChangePasswordViewModel

<div class="page-header parallaxie">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="page-header-box">
                    <h1 class="text-anime-style-3" data-cursor="-opaque">Change Password</h1>
                    <nav class="wow fadeInUp">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Change Password</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-contact-us">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="contact-image">
                    <figure class="image-anime">
                        <img src="~/images/register-image.jpg.jpg" alt="Change Password">
                    </figure>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="contact-content">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Change Password</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">Secure Your Account</h2>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Update your password to keep your account secure.</p>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success wow fadeInUp" data-wow-delay="0.3s">@TempData["SuccessMessage"]</div>
                    }

                    <div class="contact-us-form">
                        <form asp-action="ChangePassword" asp-controller="Account" method="post" class="wow fadeInUp" data-wow-delay="0.4s">
                            <div class="row">
                                <!-- Old Password -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="OldPassword" type="password" class="form-control" placeholder="Old Password">
                                    <span class="help-block with-errors text-danger" asp-validation-for="OldPassword"></span>
                                </div>

                                <!-- New Password -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password">
                                    <small>
                                        Password must contain at least one uppercase letter, one lowercase letter, one number, and one special character.
                                    </small>
                                    <span class="help-block with-errors text-danger" asp-validation-for="NewPassword"></span>
                                </div>

                                <!-- Confirm Password -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                                    <span class="help-block with-errors text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>

                                <div class="col-lg-12">
                                    <div class="contact-btn">
                                        <button type="submit" class="btn-default">Change Password</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <p class="mt-3">
                            @if (User.IsInRole("Customer"))
                            {
                                <div class="contact-btn">
                                    <a asp-controller="Account" asp-action="CustomerProfile" class="btn-default">Back to Profile</a>
                                </div>
                            }
                            else
                            {
                                <div class="contact-btn">
                                    <a asp-controller="Account" asp-action="StaffProfile" class="btn-default">Back to Profile</a>
                                </div>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
