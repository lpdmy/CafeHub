<div class="page-header parallaxie">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="page-header-box">
                    <h1 class="text-anime-style-3" data-cursor="-opaque">Register</h1>
                    <nav class="wow fadeInUp">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Register</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="our-scrolling-ticker subpages-scrolling-ticker">
    <div class="scrolling-ticker-box">
        <div class="scrolling-content">
            <span><img src="~/images/asterisk-icon.svg" alt="">Join us today!</span>
            <span><img src="~/images/asterisk-icon.svg" alt="">Exclusive offers</span>
            <span><img src="~/images/asterisk-icon.svg" alt="">Fast & secure login</span>
        </div>
    </div>
</div>

<div class="page-book-table">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="book-table-image">
                    <figure class="image-anime">
                        <img src="~/images/register-image.jpg" alt="">
                    </figure>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="book-table-content">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Register</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">Create Your Account</h2>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Sign up now to explore and enjoy exclusive benefits!</p>
                    </div>
                    <div class="container mt-4">
                        <h2 class="mb-3">User List</h2>
                        <table class="table table-bordered table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <tr>
                                        <td>user.Id</td>
                                        <td>user.Name</td>
                                        <td>user.Email</td>
                                        <td>user.Role</td>
                                        <td>
                                            <a asp-controller="User" asp-action="Edit" asp-route-id="user.Id" class="btn btn-warning btn-sm">Edit</a>
                                            <a asp-controller="User" asp-action="Delete" asp-route-id="user.Id" class="btn btn-danger btn-sm">Delete</a>
                                        </td>
                                    </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="contact-us-form wow fadeInUp" data-wow-delay="0.6s">
                        <form id="registerForm" asp-controller="Account" asp-action="Register" method="post">
                            <div class="row">
                                <div class="form-group col-md-6 mb-5">
                                    <input type="text" name="FirstName" class="form-control" placeholder="First Name" required>
                                </div>

                                <div class="form-group col-md-6 mb-5">
                                    <input type="text" name="LastName" class="form-control" placeholder="Last Name" required>
                                </div>

                                <div class="form-group col-md-12 mb-5">
                                    <input type="email" name="Email" class="form-control" placeholder="Email Address" required>
                                </div>

                                <div class="form-group col-md-12 mb-5">
                                    <input type="text" name="Phone" class="form-control" placeholder="Phone Number" required>
                                </div>

                                <div class="form-group col-md-6 mb-5">
                                    <input type="password" name="Password" class="form-control" placeholder="Password" required>
                                </div>

                                <div class="form-group col-md-6 mb-5">
                                    <input type="password" name="ConfirmPassword" class="form-control" placeholder="Confirm Password" required>
                                </div>

                                <div class="col-lg-12">
                                    <div class="book-table-btn">
                                        <button type="submit" class="btn-default">Sign Up</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <p class="mt-3">Already have an account? <a asp-controller="Account" asp-action="Login">Login</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
