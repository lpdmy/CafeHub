@model CafeHub.Commons.Models.WorkShift

@{
    ViewData["Title"] = "Work Shift Details";
}

<h2>Workshift Details: @Model.ShiftName (@Model.ShiftDate.ToString("yyyy-MM-dd"))</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<!-- Form thêm nhân viên mới vào ca làm việc -->


<a class="btn-default" href="@Url.Action("CreateWS", "AdminStaffManage", new { id = @Model.Id })">
   Add Staff
</a>

<hr>

<table class="table">
    <thead>
        <tr>
            <th>Staff ID</th>
            <th>Staff Name</th>
            <th>Attendance Status</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.WorkShiftDetails.Any())
        {
            @foreach (var item in Model.WorkShiftDetails)
            {
                <tr>
                    <td>@item.StaffId</td>
                    <td>@(item.Staff?.Name ?? "N/A")</td>
                    <td>@item.AttendanceStatus</td>
                    <td>@item.Notes</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">Không có nhân viên nào trong ca làm việc này.</td>
            </tr>
        }
    </tbody>
</table>
