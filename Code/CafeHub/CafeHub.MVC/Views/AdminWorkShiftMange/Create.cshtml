@model WorkShiftViewModel

<div class="page-contact-us">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="contact-information">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Create WorkShift</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">Add a new shift</h2>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Fill in the details to add a new shift to your store.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="contact-us-form">
                    <div class="contact-form-content">
                        <h3 class="wow fadeInUp">WorkShift Information</h3>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Please enter the shift details below.</p>
                    </div>

                    <div class="contact-form">
                        <form asp-action="Create" asp-controller="AdminWorkShiftMange" method="post" class="wow fadeInUp" data-wow-delay="0.4s">
                            <div class="row">
                                <!-- Shift Name Field -->
                                <div class="form-group col-md-12 mb-5">
                                    <input asp-for="ShiftName" class="form-control" id="shiftName" placeholder="Shift Name" required>
                                    <span asp-validation-for="ShiftName" class="text-danger"></span>
                                </div>

                                <!-- Shift Date Field -->
                                <div class="form-group col-md-12 mb-5">
                                    <input asp-for="ShiftDate" type="date" class="form-control" id="shiftDate" required>
                                    <span asp-validation-for="ShiftDate" class="text-danger"></span>
                                </div>

                                <!-- Start Time Field -->
                                <div class="form-group col-md-12 mb-5">
                                    <input asp-for="StartTime" type="time" class="form-control" id="startTime" required>
                                    <span asp-validation-for="StartTime" class="text-danger"></span>
                                </div>

                                <!-- End Time Field -->
                                <div class="form-group col-md-12 mb-5">
                                    <input asp-for="EndTime" type="time" class="form-control" id="endTime" required>
                                    <span asp-validation-for="EndTime" class="text-danger"></span>
                                </div>

                                <!-- Description Field -->
                                <div class="form-group col-md-12 mb-5">
                                    <textarea asp-for="Description" class="form-control" id="description" placeholder="Description"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <!-- Submit Button -->
                                <div class="col-lg-12">
                                    <div class="contact-form-btn">
                                        <button type="submit" class="btn-default">Create WorkShift</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Back to List Link -->
<div class="text-center">
    <a asp-action="AllWorkShift" class="btn btn-outline-primary" style="margin-left:285px;">Back to WorkShift List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
