@model CafeHub.MVC.Models.WorkShiftViewModel



<div class="page-contact-us">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="contact-information">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Delete Work Shift</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">Are you sure you want to delete this work shift?</h2>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="contact-us-form">
                    <div class="contact-form-content">
                        <h3 class="wow fadeInUp">Work Shift Details</h3>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">You are about to delete the following work shift.</p>
                    </div>

                    <div class="contact-form">
                        <dl class="row">
                            <!-- Shift Name -->
                            <dt class="col-sm-4">
                                Shift Name
                            </dt>
                            <dd class="col-sm-8">
                                @Model.ShiftName
                            </dd>

                            <!-- Start Time -->
                            <dt class="col-sm-4">
                                Start Time
                            </dt>
                            <dd class="col-sm-8">
                                @Model.StartTime.ToShortTimeString()
                            </dd>

                            <!-- End Time -->
                            <dt class="col-sm-4">
                                End Time
                            </dt>
                            <dd class="col-sm-8">
                                @Model.EndTime.ToShortTimeString()
                            </dd>

                            <!-- Shift Date -->
                            <dt class="col-sm-4">
                                Create Date
                            </dt>
                            <dd class="col-sm-8">
                                @Model.ShiftDate.ToString("dd-MM-yyyy")
                            </dd>

                            <!-- Description -->
                            <dt class="col-sm-4">
                                Description
                            </dt>
                            <dd class="col-sm-8">
                                @Model.Description
                            </dd>
                        </dl>

                        <!-- Delete Form -->
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="wow fadeInUp" data-wow-delay="0.4s">
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-danger btn-lg">Delete Work Shift</button>
                                <a asp-action="AllWorkShift" class="btn btn-outline-primary btn-lg">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
