@model CafeHub.Web.Models.StaffViewModel

<div class="page-book-table">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="book-table-image">
                    <figure class="image-anime">
                        <img src="~/images/register-image.jpg.jpg" alt="Create Staff Image">
                    </figure>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="book-table-content">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Create Staff</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">Add a New Staff Member</h2>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Fill in the details below to register a new staff member.</p>
                    </div>

                    <div class="contact-us-form wow fadeInUp" data-wow-delay="0.6s">
                        <form id="createStaffForm" asp-controller="AdminUserDashboard" asp-action="CreateStaff" method="post">
                            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                            <div class="row">
                                <!-- Name -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="Name" class="form-control" placeholder="Full Name">
                                    <span class="help-block with-errors" asp-validation-for="Name"></span>
                                </div>

                                <!-- Email -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="Email" class="form-control" placeholder="Email Address">
                                    <span class="help-block with-errors" asp-validation-for="Email"></span>
                                </div>

                                <!-- Employee Code -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="EmployeeCode" class="form-control" placeholder="Employee Code">
                                    <span class="help-block with-errors" asp-validation-for="EmployeeCode"></span>
                                </div>

                                <!-- Position -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="Position" class="form-control" placeholder="Position">
                                    <span class="help-block with-errors" asp-validation-for="Position"></span>
                                </div>

                                <!-- Hire Date -->
                                <div class="form-group col-md-6 mb-4">
                                    <input asp-for="HireDate" type="date" class="form-control">
                                    <span class="help-block with-errors" asp-validation-for="HireDate"></span>
                                </div>

                                <!-- Salary -->
                                <div class="form-group col-md-6 mb-4">
                                    <input asp-for="Salary" type="number" step="0.01" class="form-control" placeholder="Salary">
                                    <span class="help-block with-errors" asp-validation-for="Salary"></span>
                                </div>

                                <!-- Password -->
                                <div class="form-group col-md-6 mb-4">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                                    <small>
                                        Password must contain at least one uppercase letter, one lowercase letter, one number, and one special character.
                                    </small>
                                    <span class="help-block with-errors" asp-validation-for="Password"></span>
                                </div>

                                
                                <div class="col-lg-12">
                                    <div class="book-table-btn">
                                        <button type="submit" class="btn-default">Create Staff</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <p class="mt-3">
                            Need to manage staff?
                            <div class="book-table-btn">
                                <a asp-controller="AdminUserDashboard" asp-action="ManageUser" class="btn-default ml-2">View Staff List</a>
                            </div>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

