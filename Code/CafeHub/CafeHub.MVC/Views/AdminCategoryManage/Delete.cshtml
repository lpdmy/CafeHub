@model CafeHub.MVC.Models.CategoryViewModel

@{
    ViewData["Title"] = "Delete Category";
}

<div class="page-contact-us">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="contact-information">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Delete Category</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">Are you sure you want to delete this category?</h2>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="contact-us-form">
                    <div class="contact-form-content">
                        <h3 class="wow fadeInUp">Category Details</h3>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">You are about to delete the following category.</p>
                    </div>

                    <div class="contact-form">
                        <dl class="row">
                            <!-- Category Name -->
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                            <!-- Category Description -->
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Description)
                            </dd>

                            <!-- Category IsActive -->
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.IsActive)
                            </dt>
                            <dd class="col-sm-8">
                                @(Model.IsActive ? "Yes" : "No")
                            </dd>
                        </dl>

                        <!-- Delete Form -->
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="wow fadeInUp" data-wow-delay="0.4s">
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-danger btn-lg">Delete Category</button>
                                <a asp-action="Index" class="btn btn-outline-primary btn-lg">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
