@model CafeHub.MVC.Models.CategoryViewModel

@{
    ViewData["Title"] = "Edit Category";
}

<div class="page-contact-us">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="contact-information">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Edit Category</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">Edit Category Details</h2>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Modify the category details below.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="contact-us-form">
                    <div class="contact-form-content">
                        <h3 class="wow fadeInUp">Category Details</h3>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Please edit the name, description, and status of the category.</p>
                    </div>

                    <div class="contact-form">
                        <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="wow fadeInUp" data-wow-delay="0.4s">
                            <div class="row">
                                <!-- Category Name -->
                                <div class="form-group col-md-12 mb-5">
                                    <label asp-for="Name" class="control-label">Category Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter Category Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <!-- Category Description -->
                                <div class="form-group col-md-12 mb-5">
                                    <label asp-for="Description" class="control-label">Category Description</label>
                                    <input asp-for="Description" class="form-control" placeholder="Enter Category Description" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <!-- IsActive Checkbox -->
                                <div class="form-group col-md-12 mb-5">
                                    <label asp-for="IsActive" class="control-label">Is Active</label>
                                    <input asp-for="IsActive" type="checkbox" />
                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                </div>

                                @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
                                {
                                    <div class="form-group col-md-12 mb-5">
                                        <label>Current Image</label>
                                        <br>
                                        <img src="@Url.Content(Model.ExistingImagePath)" alt="Product Image" width="150" />
                                    </div>
                                }
                                <!-- Submit Button -->
                                <div class="col-lg-12 text-center">
                                    <button type="submit" class="btn btn-success btn-lg">Save Category</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Back to List Link -->
<div class="text-center">
    <a asp-action="Index" class="btn btn-outline-primary btn-lg">Back to Category List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
