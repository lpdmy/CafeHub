@model DiscountViewModel

@{
    ViewData["Title"] = "Edit Discount";
}

<h2>Edit Discount</h2>

<div class="page-book-table">
    <div class="container">
        <div class="row align-items-center">
          

            <div class="col-lg-6">
                <div class="book-table-content">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Create Discount</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">Edit a Discount</h2>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Fill in the details below to edit a discount.</p>
                    </div>

                    <div class="contact-us-form wow fadeInUp" data-wow-delay="0.6s">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />
                            <div class="row">
                                <!-- Discount Name -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="Name" class="form-control" placeholder="Discount Name">
                                    <span class="help-block with-errors" asp-validation-for="Name"></span>
                                </div>

                                <!-- Discount Type -->
                                <div class="form-group col-md-12 mb-4">
                                    <select asp-for="DiscountType" class="form-control">
                                        <option value="Percentage">Percentage</option>
                                        <option value="Fixed Amount">Fixed Amount</option>
                                    </select>
                                    <span class="help-block with-errors" asp-validation-for="DiscountType"></span>
                                </div>

                                <!-- Discount Value -->
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="DiscountValue" type="number" step="0.01" class="form-control" placeholder="Discount Value">
                                    <span class="help-block with-errors" asp-validation-for="DiscountValue"></span>
                                </div>

                                <!-- Start Date -->
                                <div class="form-group col-md-6 mb-4">
                                    <input asp-for="StartDate" type="date" class="form-control">
                                    <span class="help-block with-errors" asp-validation-for="StartDate"></span>
                                </div>

                                <!-- End Date -->
                                <div class="form-group col-md-6 mb-4">
                                    <input asp-for="EndDate" type="date" class="form-control">
                                    <span class="help-block with-errors" asp-validation-for="EndDate"></span>
                                </div>

                                <!-- Condition -->
                                <div class="form-group col-md-12 mb-4">
                                    <select asp-for="Condition" class="form-control">
                                        <option value="Bronze">Bronze</option>
                                        <option value="Silver">Silver</option>
                                        <option value="Gold">Gold</option>
                                        <option value="Platinum">Platinum</option>
                                    </select>
                                    <span class="help-block with-errors" asp-validation-for="Condition"></span>
                                </div>

                                <!-- Is Active -->
                                <div class="form-group col-md-12 mb-4">
                                    <div class="form-check">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                        <label class="form-check-label" for="IsActive">Active</label>
                                    </div>
                                    <span class="help-block with-errors" asp-validation-for="IsActive"></span>
                                </div>

                                <!-- Image Upload -->
                                <div class="form-group col-md-12 mb-4">
                                    <label for="ImageFile">Upload Discount Image</label>
                                    <input asp-for="ImageFile" type="file" class="form-control">
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <div class="form-group">
                                        <label>Current Image</label>
                                        <img src="@Url.Content(Model.ImageUrl)" alt="Discount Image" width="100" height="100" />
                                    </div>
                                }

                                <div class="col-lg-12">
                                    <div class="book-table-btn">
                                        <button type="submit" class="btn-default">Save Changes</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <p class="mt-3">
                            Need to manage discounts?
                            <div class="book-table-btn">
                                <a asp-controller="Discounts" asp-action="Index" class="btn-default ml-2">View Discounts</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
