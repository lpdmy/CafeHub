@model CreateProductViewModel

<div class="page-contact-us">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="contact-information">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Create Product</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">Add a new product</h2>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Fill in the details to add a new product to your store.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="contact-us-form">
                    <div class="contact-form-content">
                        <h3 class="wow fadeInUp">Product Information</h3>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Please enter the product details below.</p>
                    </div>

                    <div class="contact-form">
                        <form asp-action="Create" asp-controller="Products" method="post" class="wow fadeInUp" data-wow-delay="0.4s" enctype="multipart/form-data">
                            <div class="row">
                                <!-- Product Name Field -->
                                <div class="form-group col-md-12 mb-5">
                                    <input asp-for="Name" class="form-control" id="productName" placeholder="Product Name" required>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <!-- Product Price Field -->
                                <div class="form-group col-md-12 mb-5">
                                    <input asp-for="Price" type="number" class="form-control" id="productPrice" placeholder="Product Price" required>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>

                                <!-- Product Description Field -->
                                <div class="form-group col-md-12 mb-5">
                                    <textarea asp-for="Description" class="form-control" id="productDescription" placeholder="Product Description" required></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <!-- Product Category Field -->
                                <div class="form-group col-md-12 mb-5">
                                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId" required>
                                        <option value="">Select Category</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>

                                <!-- Product Image Upload Field -->
                                <div class="form-group col-md-12 mb-5">
                                    <label for="productImage">Product Image</label>
                                    <input asp-for="Image" type="file" class="form-control" id="productImage" accept="image/*" required>
                                    <span asp-validation-for="Image" class="text-danger"></span>
                                </div>

                                <!-- Submit Button -->
                                <div class="col-lg-12">
                                    <div class="contact-form-btn">
                                        <button type="submit" class="btn-default">Create Product</button>
                                    </div>
                                </div>

                             

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Back to List Link -->
<div class="text-center">
    <a asp-action="Index" class="btn btn-outline-primary">Back to Product List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
