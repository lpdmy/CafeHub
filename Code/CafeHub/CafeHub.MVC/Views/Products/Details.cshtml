@model CafeHub.Commons.Models.Product

<div class="page-contact-us">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="contact-information">
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Product Details</h3>
                        <h2 class="text-anime-style-3" data-cursor="-opaque">View Product Information</h2>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">Here are the details of the selected product.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="contact-us-form">
                    <div class="contact-form-content">
                        <h3 class="wow fadeInUp">Product Information</h3>
                        <p class="wow fadeInUp" data-wow-delay="0.2s">You can view and edit the product details below.</p>
                    </div>

                    <div class="contact-form">
                        <form method="get">
                            <div class="row">
                                <!-- Product Name Field -->
                                <div class="form-group col-md-12 mb-5">
                                    <label class="control-label">Product Name</label>
                                    <input class="form-control" value="@Model.Name" disabled />
                                </div>

                                <!-- Product Price Field -->
                                <div class="form-group col-md-12 mb-5">
                                    <label class="control-label">Price</label>
                                    <input class="form-control" value="@Model.Price" disabled />
                                </div>

                                <!-- Product Description Field -->
                                <div class="form-group col-md-12 mb-5">
                                    <label class="control-label">Description</label>
                                    <textarea class="form-control" disabled>@Model.Description</textarea>
                                </div>

                                <!-- Product Category Field -->
                                <div class="form-group col-md-12 mb-5">
                                    <label class="control-label">Category</label>
                                    <input class="form-control" value="@Model.Category.Name" disabled />
                                </div>

                                @if (!string.IsNullOrEmpty(Model.ImagePath))
                                {
                                    <div class="form-group col-md-12 mb-5">
                                        <label>Current Image</label>
                                        <br>
                                        <img src="@Url.Content(Model.ImagePath)" alt="Product Image" width="150" />
                                    </div>
                                }

                                <!-- Edit and Back to List Links -->
                                <div class="col-lg-12 text-center">
                                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg">Edit Product</a>
                                    <a asp-action="Index" class="btn btn-outline-primary btn-lg">Back to Product List</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
